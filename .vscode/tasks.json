{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo doc"
		},
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"--no-deps",
				"--open"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "cargo doc --open"
		},
		{
			"type": "cargo",
			"group": "build",
			"command": "build",
			"env": {
				"RUST_LOG": "info"
			},
			"args": [],
			"problemMatcher": [
				"$rustc"
			],
			"label": "BCP: build debug"
		},
		{
			"type": "cargo",
			"group": "build",
			"command": "build",
			"env": {
				"RUST_LOG": "info"
			},
			"args": [
				"--release",
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "BCP: build release"
		},
		{
			"type": "cargo",
			"command": "publish",
			"args": [
				"--package",
				"better_control_panel",
				"--registry",
				"crates-io"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "BCP: publish"
		},
	]
}